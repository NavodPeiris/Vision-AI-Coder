{
	"compilerOptions": {
		"module": "Node16",
		"target": "es6",
		"outDir": "dist",
		"lib": [
			"es6",
			"dom"
		],
		"baseUrl": "./src",
		"sourceMap": true,
		"paths" : {
			"*": ["*"],
		},
		"strict": false,   /* disable all strict type-checking options */
		"noEmitOnError": false,  // Allow emitting output even if there are errors
        "skipLibCheck": true,    // Skip type checking of declaration files
		"jsx": "react-jsx",
		"noUnusedParameters": false,  /* Report errors on unused parameters. */
		"noEmitHelpers": true,
		"importHelpers": false,
		"typeRoots": [
			"node_modules/@types"
		],
		"moduleResolution":"Node16"
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
